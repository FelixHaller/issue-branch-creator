<idea-plugin url="www.jetbrains.com">
    <id>com.github.felixhaller.issuebranchcreator</id>
    <name>issue-branch-creator</name>
    <vendor>felixhaller</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.felixhaller.issuebranchcreator.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.felixhaller.issuebranchcreator.services.MyProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.felixhaller.issuebranchcreator.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

    <actions>
        <action id="com.github.felixhaller.issuebranchcreator.PopupDialogAction"
                class="com.github.felixhaller.issuebranchcreator.PopupDialogAction" text="Create a Branch by Issue Id">
            <add-to-group group-id="GitRepositoryActions" anchor="first"/>
            <keyboard-shortcut first-keystroke="control G" second-keystroke="C" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
